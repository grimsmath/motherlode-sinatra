<h1>Log in</h1>

<%= simple_form_for(:login, url: sessions_path) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username, as: :string %>
      <%= f.input :password, as: :password %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>